<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="BottomNavigation.InActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="addTextBtn">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Button.Add" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#00D415</item>
    </style>

    <style name="box_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text_bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="btn_add_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_add</item>
        <item name="android:elevation">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:theme">@style/Button.Add</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/ic_plus_circle</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="btn_delete_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_delete</item>
        <item name="android:elevation">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:theme">@style/Button.Add</item>
        <item name="android:clickable">true</item>

        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="item_add_time_keeping_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">10dp</item>

    </style>
</resources>